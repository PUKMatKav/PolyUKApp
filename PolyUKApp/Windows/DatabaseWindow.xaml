<Window x:Class="PolyUKApp.Windows.DatabaseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        Title="DatabaseWindow" 
        Height="800" Width="1400" MinHeight="800" MinWidth="1200"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Icon="Images/PUKIco.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Border x:Name="TopBar0"
            Background="{DynamicResource Accent}"
            CornerRadius="5,5,0,0"
            BorderBrush="{DynamicResource AccentBorder}"
            BorderThickness="1"
            MouseDown="TopBar0_MouseDown"/>

        <Border Background="{DynamicResource BackgroundBase}"
            Grid.Row="2"
            Opacity="1"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1,0"/>

        <Border x:Name="MainBorder"
                Background="{DynamicResource BackgroundLight}"
                Margin="25"
                Grid.Row="2"
                CornerRadius="5"
                BorderBrush="{DynamicResource BorderMid}"
                BorderThickness="1">
            <Grid>
                <TextBlock x:Name="TextBlockStock"
                   Text="Database Viewer"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="18"
                   Margin="20,20,0,0"
                   Foreground="{DynamicResource Accent}"
                   FontFamily="Aptos"
                   FontWeight="Bold"/>
                <TextBlock Text="Filter"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="27,70,0,0"
                FontSize="12"
                Foreground="{DynamicResource Text}"
                FontWeight="Normal"
                FontFamily="Aptos"/>

                <ComboBox x:Name="ComboBoxSearch"
                      Width="200"
                      Height="30"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Top"
                      Margin="20,100,0,0"
                      Background="Transparent"
                      Style="{DynamicResource ComboBoxFlatStyle}"
                      DisplayMemberPath="ColumnName"
                          Foreground="{DynamicResource Text}">
                </ComboBox>
                <Border Background="{DynamicResource ComboBackground}"
                        CornerRadius="10"
                        Height="35"
                        Width="300"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="20,150,0,0">
                    <TextBox x:Name="TxtBxSearch"
                        Background="Transparent"
                         BorderThickness="0"
                        HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                        VerticalContentAlignment="Center"
                        HorizontalContentAlignment="Left"
                        Padding="7"
                        Height="35"
                        Width="300"
                        FontFamily="Aptos"
                        Foreground="{DynamicResource Text}">
                    </TextBox>

                </Border>
                <DataGrid x:Name="DataGrid1"
                    Grid.Row="2"
                    Margin="20,210,20,20"
                    MinColumnWidth="100"
                    Style="{DynamicResource DataGridTheme}"
                    CellStyle="{DynamicResource DataGridCellStockTheme}"
                    ColumnHeaderStyle="{DynamicResource ColumnHeaderStockTheme}">
                </DataGrid>
                <StackPanel x:Name="SearchPanel"
                            Orientation="Horizontal"
                            Margin="350,150,800,0"
                            VerticalAlignment="Top"
                            Height="35">
                    <Button x:Name="BtnSearchData"
                                Content="Search"
                                HorizontalAlignment="Left"
                                Style="{DynamicResource SearchButtonTheme}"
                                Click="BtnSearchData_Click"/>
                    <Button x:Name="BtnResetData"
                            Content="Reset"
                            Margin="20,0,0,0"
                            HorizontalAlignment="Left"
                            Style="{DynamicResource SearchButtonTheme}"
                            Click="BtnResetData_Click"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="500,150,20,0"
                            VerticalAlignment="Top"
                            Height="35">
                    <TextBlock x:Name="CRMTxtBlk"
                               Text="CRM:"
                               Margin="0,0,20,0"
                               Foreground="{DynamicResource Accent}"
                               VerticalAlignment="Center"
                               FontSize="20"/>
                    <Button x:Name="BtnCRMDupeAccounts"
                            Content="Duplicate Accounts"
                            Margin="0,0,20,0"
                            Width="130"
                            Click="BtnCRMDupeAccounts_Click"
                            Style="{DynamicResource GeneralButtonTheme}"/>
                    <Button x:Name="BtnCRMProspectNoComms"
                            Content="Prospect No Comms"
                            Margin="0,0,20,0"
                            Width="130"
                            Click="BtnCRMProspectNoComms_Click"
                            Style="{DynamicResource GeneralButtonTheme}"/>
                    <Button x:Name="BtnCRMLoad"
                            Content="Customers No Comms"
                            Margin="0,0,0,0"
                            Width="130"
                            Click="BtnCRMLoad_Click"
                            Style="{DynamicResource GeneralButtonTheme}"/>
                    <Button x:Name="BtnIntakeLoad"
                            Content="Intake Sheet"
                            Margin="0,0,20,0"
                            Click="BtnIntakeLoad_Click"
                            Style="{DynamicResource GeneralButtonTheme}"
                            Visibility="Collapsed"/>
                    <Button x:Name="BtnWOLoad"
                            Content="WO List"
                            Margin="0,0,20,0"
                            Click="BtnWOLoad_Click"
                            Style="{DynamicResource GeneralButtonTheme}"
                            Visibility="Collapsed"/>
                    <Button x:Name="BtnVanLoad"
                            Content="Van Jobs"
                            Margin="0,0,20,0"
                            Click="BtnVanLoad_Click"
                            Style="{DynamicResource GeneralButtonTheme}"
                            Visibility="Collapsed"/>
                    <Button x:Name="BtnVanSave"
                            Content="Van Save"
                            Margin="0,0"
                            Click="BtnVanSave_Click"
                            Style="{DynamicResource GeneralButtonTheme}"
                            Visibility="Collapsed"/>
                </StackPanel>
                <RichTextBox Width="400"
                         Height="200"
                         x:Name="TestRich"
                         VerticalAlignment="Top"
                             Margin="5"
                             Visibility="Hidden">

                </RichTextBox>
                <TextBlock Width="100"
                         Height="100"
                         x:Name="TestBlock"
                         VerticalAlignment="Top"
                           HorizontalAlignment="Right"
                             Margin="105, 5"
                           Foreground="{DynamicResource Text}">

                </TextBlock>
                <TextBlock x:Name="TextBlockComboError"
                   Text="Please Select Catagory!!"
                   Margin="230,108,0,0"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontFamily="Aptos"
                   FontSize="14"
                   Foreground="Red"
                   Visibility="Hidden"
                   IsHitTestVisible="False"/>
                <TextBlock x:Name="TextBlockCopied"
                   Text="Copied"
                   Margin="20"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   FontFamily="Aptos"
                   FontSize="14"
                   Foreground="{DynamicResource Accent}"
                   Visibility="Hidden"
                   IsHitTestVisible="False"/>
            </Grid>
        </Border>

        <Border x:Name="BotBar0"
            Background="{DynamicResource BackgroundMid}"
            Grid.Row="3"
            BorderBrush="{DynamicResource Border}"
                BorderThickness="1"
                CornerRadius="0,0,5,5">
        </Border>

        <Border x:Name="LogoBar0"
                Background="{DynamicResource BackgroundMid}"
                Grid.Row="1"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1,0,1,1">
        </Border>

        <StackPanel Orientation="Horizontal"
     HorizontalAlignment="Right"
             Margin="0,0,10,0">
            <Button x:Name="BtnMinimise"
                 Width="40" Height="35"
                 Content="_"
                 Style="{DynamicResource ControlButtonTheme}"
                 Click="BtnMinimise_Click"/>
            <Button x:Name="BtnMaximise"
                 Width="40" Height="35"
                 Content="🗖"
                 Style="{DynamicResource ControlButtonTheme}"
                 Click="BtnMaximise_Click"/>
            <Button x:Name="BtnClose"
                 Width="40" Height="35"
                 Content="X"
                 Style="{DynamicResource ControlButtonTheme}"
                 Click="BtnClose_Click"/>
        </StackPanel>

        <Image x:Name="PUKLogo"
        Source="Images\PUK_Blue_Logo_512.png"
        Grid.Row="1"
        Margin="20,8,15,8"
        HorizontalAlignment="Left"/>

        <TextBlock x:Name="versionbox"
            Text="v0.1"
            Grid.Row="3"
            FontFamily="Aptos"
            Foreground="Gray"
            VerticalAlignment="Center"
            Margin="10 0 0 0"/>
        <StackPanel x:Name="ReturnTabPanel"
                    Grid.Row="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="375,0,25,0">
            <Button x:Name="BtnMainMenu"
                    Content="Main Menu"
                    Click="BtnMainMenu_Click"
                    Width="80"
                    Style="{DynamicResource GeneralButtonTheme}"/>
        </StackPanel>


    </Grid>
</Window>
