<Window x:Class="PolyUKApp.Windows.VanRequestVisit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        Title="VanRequestVisit" Height="900" Width="1600"        
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Border Background="Black"
            Opacity="0.5"
            CornerRadius="5,0,0,0"
            RenderOptions.EdgeMode="Aliased"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"/>
        <Border Background="Black"
            Opacity="0.5"
            CornerRadius="0,5,0,0"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="3"
                CornerRadius="0,0,0,5"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="3"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="3"
                CornerRadius="0,0,5,0"/>

        <Border Background="{DynamicResource Accent}"
            Grid.Row="1"
            Grid.Column="1"
            CornerRadius="10,10,0,0"
            BorderBrush="{DynamicResource AccentBorder}"
            BorderThickness="0,0,0,1">
            <Button x:Name="BtnClose"
                    Width="40" Height="35"
                    Content="X"
                    Style="{DynamicResource ControlButtonTheme}"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                    Click="BtnClose_Click"/>
        </Border>

        <Border Background="{DynamicResource BackgroundLight}"
            Grid.Row="2"
            Grid.Column="1"
            CornerRadius="0,0,10,10">
            <Grid>
                <TextBlock x:Name="TextBlockCusAdd"
               Foreground="{DynamicResource Text}"
               Grid.Column="1"
               Grid.Row="2"
               Text="Address"
               FontFamily="Aptos"
               FontWeight="SemiBold"
               FontSize="14"
               Margin="45,110,0,0"
               Width="125"
               Height="15"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="300"
            Grid.Column="1"
            Grid.Row="2"
            Margin="40,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextBoxCusAddInfo"
                             Background="Transparent"
               Foreground="{DynamicResource Text}"
               Grid.Column="1"
               Grid.Row="2"
               FontFamily="Aptos"
               FontSize="12"
               Width="300"
               MaxWidth="400"
               Height="35"
               Padding="5,0,5,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Center"
               VerticalContentAlignment="Center"
               BorderThickness="0">
                    </TextBox>
                </Border>


                <TextBlock x:Name="TextBlockTown"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Town / City"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="45,190,0,0"
       Width="125"
       Height="15"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}" 
            CornerRadius="10"
            Height="35"
            Width="300"
            Grid.Column="1"
            Grid.Row="2"
            Margin="40,215,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextBoxTown"
                             Background="Transparent"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Width="300"
       Height="35"
       MaxHeight="300"
       Padding="5,0,5,0"
       HorizontalAlignment="Left"
       VerticalAlignment="Center"
       VerticalContentAlignment="Center"
       BorderThickness="0"
       VerticalScrollBarVisibility="Auto">
                    </TextBox>
                </Border>


                <TextBlock x:Name="TextBlockPostcode"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Postcode"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="45,270,0,0"
       Width="125"
       Height="15"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="300"
            Grid.Column="1"
            Grid.Row="2"
            Margin="40,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextBoxPostcode"
                             Background="Transparent"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Width="300"
       Height="35"
       Padding="5,0,5,0"
       HorizontalAlignment="Left"
       VerticalAlignment="Center"
       VerticalContentAlignment="Center"
       BorderThickness="0"
       VerticalScrollBarVisibility="Auto">

                    </TextBox>
                </Border>


                <TextBlock x:Name="TextBlockVisitDesc"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Visit Description"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="45,350,0,0"
       Width="125"
       Height="15"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="65"
            Width="500"
            Grid.Column="1"
            Grid.Row="2"
            Margin="40,375,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <RichTextBox x:Name="RichTextVisitDesc"
                         Background="Transparent"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Width="500"
       Height="65"
       Padding="3,5,3,5"
       HorizontalAlignment="Left"
       VerticalAlignment="Center"
       BorderThickness="0"
       VerticalScrollBarVisibility="Auto">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="LineHeight" Value="2"/>
                            </Style>
                        </RichTextBox.Resources>
                    </RichTextBox>
                </Border>


                <TextBlock x:Name="TextBlockContactName"
        Foreground="{DynamicResource Text}"
        Grid.Column="1"
        Grid.Row="2"
        Text="Contact Name"
        FontFamily="Aptos"
        FontWeight="SemiBold"
        FontSize="14"
        Margin="375,110,0,0"
        Width="100"
        Height="20"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="200"
            Grid.Column="1"
            Grid.Row="2"
            Margin="370,135,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextContactName"
        Background="Transparent"
        Foreground="{DynamicResource Text}"
        Grid.Column="1"
        Grid.Row="2"
        FontFamily="Aptos"
        FontSize="12"
        Width="200"
        Height="35"
        Padding="5,0,5,0"
        HorizontalAlignment="Left"
        VerticalAlignment="Center"
        VerticalContentAlignment="Center"
        BorderThickness="0">
                    </TextBox>
                </Border>
                <TextBlock x:Name="TextBlockContactNum"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
Text="Contact Number"
FontFamily="Aptos"
FontWeight="SemiBold"
FontSize="14"
Margin="375,190,0,0"
Width="110"
Height="20"
HorizontalAlignment="Left"
VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="200"
            Grid.Column="1"
            Grid.Row="2"
            Margin="370,215,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextContactNum"
                             Background="Transparent"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Width="200"
Height="35"
Padding="5,0,5,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
                            VerticalContentAlignment="Center"
BorderThickness="0">
                    </TextBox>
                </Border>
                <TextBlock x:Name="TextBlockContactEmail"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
Text="Contact Email"
FontFamily="Aptos"
FontWeight="SemiBold"
FontSize="14"
Margin="375,270,0,0"
Width="120"
Height="20"
HorizontalAlignment="Left"
VerticalAlignment="Top"/>
                <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="200"
            Grid.Column="1"
            Grid.Row="2"
            Margin="370,295,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
                    <TextBox x:Name="TextContactEmail"
                             Background="Transparent"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Width="200"
Height="35"
Padding="5"
HorizontalAlignment="Left"
VerticalAlignment="Center"
                             VerticalContentAlignment="Center"
BorderThickness="0">
                    </TextBox>
                </Border>


                <TextBlock x:Name="TextBlockSalesPerson"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Sales Person"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="595,110,0,0"
       Width="100"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboSalesStaff"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Margin="590,135,0,0"
       Width="150"
       MaxWidth="150"
       Height="25"
       Padding="2"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       BorderThickness="0"
       IsEditable="True"
       Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>






                <TextBlock x:Name="TextBlockStaff"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Staff Visiting"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="595,190,0,0"
       Width="100"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboAdminStaff"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Margin="590,215,0,0"
       Width="150"
       MaxWidth="150"
       Height="25"
       Padding="2"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       BorderThickness="0"
       IsEditable="True"
       Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>
                <TextBlock x:Name="TextBlockType"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Visit Type"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="595,270,0,0"
       Width="100"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboType"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Margin="590,295,0,0"
       Width="150"
       MaxWidth="150"
       Height="25"
       Padding="5"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       BorderThickness="0"
       IsEditable="True"
       Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>

                <TextBlock x:Name="TextBlockCreditChecked"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Credit Checked"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="815,110,0,0"
       Width="160"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboCreditChecked"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Margin="810,135,0,0"
Width="150"
MaxWidth="150"
Height="25"
Padding="5"
HorizontalAlignment="Left"
VerticalAlignment="Top"
BorderThickness="0"
IsEditable="True"
Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>

                <TextBlock x:Name="TextBlockPromTime"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Planned Start Time"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="815,270,0,0"
       Width="150"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboPromTime"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Margin="810,295,0,0"
Width="150"
MaxWidth="150"
Height="25"
Padding="5"
HorizontalAlignment="Left"
VerticalAlignment="Top"
BorderThickness="0"
IsEditable="True"
Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>


                <TextBlock x:Name="TextBlockJobTime"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Estimated Job Time (hrs)"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="815,350,0,0"
       Width="160"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <ComboBox x:Name="ComboJobTime"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Margin="810,375,0,0"
Width="150"
MaxWidth="150"
Height="25"
Padding="5"
HorizontalAlignment="Left"
VerticalAlignment="Top"
BorderThickness="0"
IsEditable="True"
Style="{DynamicResource ComboBoxFlatStyle}">
                </ComboBox>


                <TextBlock x:Name="TextBlockPromDate"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Suggested Date"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="815,190,0,0"
       Width="100"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
                <RichTextBox x:Name="RichTextPromDate"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Margin="810,215,0,0"
       Width="150"
       MaxWidth="150"
       Height="45"
       Padding="5"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       BorderThickness="0"
       Background="Transparent">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="LineHeight" Value="2"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>



                <RichTextBox x:Name="RichTextDatePotential"
Foreground="Red"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontStyle="Italic"
FontSize="12"
Margin="810,230,0,0"
Width="100"
MaxWidth="100"
Height="45"
Padding="5"
HorizontalAlignment="Left"
VerticalAlignment="Top"
BorderThickness="0"
                             Background="Transparent">
                    <RichTextBox.Resources>
                        <Style TargetType="{x:Type Paragraph}">
                            <Setter Property="LineHeight" Value="2"/>
                        </Style>
                    </RichTextBox.Resources>
                </RichTextBox>

                <Border Background="{DynamicResource BackgroundMid}"
                        VerticalAlignment="Bottom"
                        MinHeight="150"
                        MaxHeight="250"
                        CornerRadius="0,0,5,5"
                        BorderBrush="{DynamicResource Border}"
                        BorderThickness="0,1">
                    <Grid>

                        <TextBlock x:Name="TextBlockEditDetails"
                                   Margin="45,20,20,20"
                                   Foreground="{DynamicResource Text}"
                                   Text="Edit Suggested Date"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   FontFamily="Aptos"/>
                        <TextBlock x:Name="TextBlockEditStart"
                                   Margin="45,80,20,20"
                                   Foreground="{DynamicResource Text}"
                                   Text="Set Date - "
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   FontFamily="Aptos"/>
                        <DatePicker x:Name="StartDatePicker"
                                    Margin="5,50,820,20"
                                    Width="150"
                                    Height="25"
                                    BorderThickness="0"
                                    Background="Transparent"
                                    SelectedDateChanged="StartDatePicker_SelectedDateChanged"
                                    />

                        <Button x:Name="BtnValidate"
                                Content="Send Visit Request"
                                Width="120"
                                Margin="0,50,530,20"
                                Style="{DynamicResource SearchButtonTheme}"
                                    Click="BtnValidate_Click"/>
                    </Grid>
                </Border>




            </Grid>
        </Border>
        <TextBlock x:Name="TextBlockVisitID"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       Text="Visit ID"
       FontFamily="Aptos"
       FontWeight="SemiBold"
       FontSize="14"
       Margin="1035,110,0,0"
       Width="100"
       Height="20"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"/>
        <TextBox x:Name="TextVisitID"
       Foreground="{DynamicResource Text}"
       Grid.Column="1"
       Grid.Row="2"
       FontFamily="Aptos"
       FontSize="12"
       Margin="1030,135,0,0"
       Width="100"
       MaxWidth="100"
       Height="45"
       Padding="5"
       HorizontalAlignment="Left"
       VerticalAlignment="Top"
       BorderThickness="0"
       Background="Transparent">
        </TextBox>
        <Border Background="{DynamicResource ComboBackground}"
            CornerRadius="10"
            Height="35"
            Width="300"
            Grid.Column="1"
            Grid.Row="2"
            Margin="40,50,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TextBox x:Name="VisitTextBox"
                      BorderThickness="0"
                     FontFamily="Aptos"
                      Width="300"
                      Height="30"
                      HorizontalAlignment="Left"
                      VerticalAlignment="Center"
                     VerticalContentAlignment="Center"
                     Padding="5,0,5,0"
                      Background="Transparent">
            </TextBox>
        </Border>
        <TextBlock Foreground="{DynamicResource Text}"
                Grid.Column="1"
                 Grid.Row="2"
                Text="Customer"
                FontFamily="Aptos"
                FontSize="14"
                 Margin="45,30,0,0"
                FontWeight="SemiBold"
                Width="125"
                Height="15"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"/>
        <TextBlock x:Name="TextBlockTurnover"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
Text="Annual Spend"
FontFamily="Aptos"
FontWeight="SemiBold"
FontSize="14"
Margin="1035,190,0,0"
Width="120"
Height="20"
HorizontalAlignment="Left"
VerticalAlignment="Top"/>
        <Border Background="{DynamicResource ComboBackground}"
     CornerRadius="10"
     Height="35"
     Width="120"
     Grid.Column="1"
     Grid.Row="2"
     Margin="1030,215,0,0"
     HorizontalAlignment="Left"
     VerticalAlignment="Top">
            <RichTextBox x:Name="RichTextTurnover"
Foreground="{DynamicResource Text}"
Background="Transparent"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Width="120"
MaxWidth="135"
Padding="5,0,5,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
BorderThickness="0">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="LineHeight" Value="2"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Border>

        <TextBlock x:Name="TextBlockRegNo"
Foreground="{DynamicResource Text}"
Grid.Column="1"
Grid.Row="2"
Text="Company Reg"
FontFamily="Aptos"
FontWeight="SemiBold"
FontSize="14"
Margin="1035,270,0,0"
Width="120"
Height="20"
HorizontalAlignment="Left"
VerticalAlignment="Top"/>
        <Border Background="{DynamicResource ComboBackground}"
     CornerRadius="10"
     Height="35"
     Width="120"
     Grid.Column="1"
     Grid.Row="2"
     Margin="1030,295,0,0"
     HorizontalAlignment="Left"
     VerticalAlignment="Top">
            <RichTextBox x:Name="RichTextRegNo"
Foreground="{DynamicResource Text}"
Background="Transparent"
Grid.Column="1"
Grid.Row="2"
FontFamily="Aptos"
FontSize="12"
Width="120"
MaxWidth="135"
Padding="5,0,5,0"
HorizontalAlignment="Left"
VerticalAlignment="Center"
BorderThickness="0">
                <RichTextBox.Resources>
                    <Style TargetType="{x:Type Paragraph}">
                        <Setter Property="LineHeight" Value="2"/>
                    </Style>
                </RichTextBox.Resources>
            </RichTextBox>
        </Border>
    </Grid>
</Window>
