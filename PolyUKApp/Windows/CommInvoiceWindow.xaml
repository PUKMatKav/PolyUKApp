<Window x:Class="PolyUKApp.Windows.CommInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        x:Name="CommInvWindow"
        Title="CommInvoiceWindow" Height="1020" Width="800"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition MinWidth="700"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Border Background="White"
                Grid.Column="1"
                Grid.Row="0"
                CornerRadius="10,10,0,0"
                BorderBrush="#F1F2F7"
                BorderThickness="0 0 0 1">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="BtnPrint"
                    Width="40" Height="35"
                    Content="🖶"
                    FontWeight="Bold"
                    Style="{StaticResource ControlButtonTheme}"
                        Click="BtnPrint_Click"/>
                <Button x:Name="BtnClose"
                Width="40" Height="35"
                Content="X"
                Style="{StaticResource ControlButtonTheme}"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
        <Border x:Name="GeneratedBorder"
                Background="White"
                Grid.Column="1"
                Grid.Row="1"
                CornerRadius="0,0,0,0"
                VerticalAlignment="Stretch"
                Visibility="Hidden"/>
        <Border x:Name="SearchBorder"
                Background="#007FFF"
                Grid.Column="1"
                Grid.Row="1"
                CornerRadius="0,0,0,0"
                VerticalAlignment="Stretch"/>

        <Border x:Name="SearchTextBoxBackground"
         Background="#F1F2F7"
         CornerRadius="10"
         Height="35"
         Width="300"
         HorizontalAlignment="Left"
         VerticalAlignment="Center"
         Margin="140,0"
         Grid.Row="1"/>
        <TextBlock x:Name="OrderNumText"
                Text="Order Number"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="27,0,0,0"
                FontSize="14"
                Foreground="White"
                FontWeight="Normal"
                FontFamily="Aptos"
                Grid.Row="1"/>
        <StackPanel x:Name="SearchPanel"
            Orientation="Horizontal"
            Margin="0,0,20,0"
            Height="35"
            Grid.Row="1"
            VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Button x:Name="BtnGenCI"
                Content="Generate"
                HorizontalAlignment="Left"
                Style="{StaticResource SearchButtonTheme}"
                Click="BtnGenCI_Click"/>
            <Button x:Name="BtnResetCI"
            Content="Reset"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            Style="{StaticResource SearchButtonTheme}"
            Click="BtnResetCI_Click"/>
        </StackPanel>
        <TextBox x:Name="TxtBxSearch"
         Background="Transparent"
          BorderThickness="0"
         HorizontalAlignment="Left"
          VerticalAlignment="Center"
         VerticalContentAlignment="Center"
         HorizontalContentAlignment="Left"
         Padding="7"
         Height="35"
         Width="300"
         Margin="140,0"
         FontFamily="Aptos"
         Grid.Row="1">
         </TextBox>
        
        
        
        
        <Border x:Name="CIBackground"
                Background="White"
                Grid.Column="1"
                Grid.Row="2"
                CornerRadius="0,0,10,10"
                VerticalAlignment="Stretch">

        </Border>
        <Grid x:Name="PrintBoundry"
              Width="800"
              Height="990"
              Grid.Row="2"
              Margin="0,-40,0,0"
              VerticalAlignment="Top">
            <Image x:Name="PUKLogo"
               Source="Images\Polythene_UK_Logo_2022_RGB_LR.png"
               Margin="20,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="70"
                   Visibility="Hidden"/>
            <TextBlock Text="Commercial Invoice"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,80,0,0"
                FontSize="20"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>

        <TextBlock Text="Invoice Number:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,120,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
        <TextBlock x:Name="InvNumber"
                Text="VARInvNum"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,120,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

        <TextBlock Text="Date of Invoice:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,160,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
        <TextBlock x:Name="InvDate"
                Text="VARInvDate"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,160,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

        <TextBlock Text="Country of Origin:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,180,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
            <TextBlock x:Name="OriginLOC"
                Text="VAROriginLOC"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,180,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

            <TextBlock Text="Invoice From:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="20,85,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="InvFromText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="370,115,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"/>

            <TextBlock Text="Invoice To:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="420,85,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="InvToText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="580,115,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"/>

            <TextBlock Text="Deliver To:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="420,255,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="DelToText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="580,285,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"/>

            <TextBlock Text="Order Number:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,255,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="OrderNumberTextBlock"
                Text="OrderNumberTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,255,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Customer PO:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,275,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="CusPOTextBlock"
                Text="CusPOTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,275,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Terms: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,295,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="TermsTextBlock"
                Text="TermsTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,295,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="INCOTERMS: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,315,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="INCOTERMSTextBlock"
                Text="INCOTERMSTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,315,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>


            <DataGrid x:Name="DataGridCI"
                    Grid.Row="2"
                    Margin="20,430,20,20"
                    MinColumnWidth="50"
                    Style="{StaticResource DataGridThemeCI}"
                    CellStyle="{StaticResource DataGridCellStockThemeCI}"
                    ColumnHeaderStyle="{StaticResource ColumnHeaderStockThemeCI}">
            </DataGrid>
        </Grid>
    </Grid>
</Window>
