<Window x:Class="PolyUKApp.Windows.CommInvoiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        x:Name="CommInvWindow"
        Title="CommInvoiceWindow" Height="1020" Width="800"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip">
    <Grid>
        <Grid.ColumnDefinitions>

            <ColumnDefinition MinWidth="700"/>

        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>

            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Border x:Name="TopBar"
                Background="White"
                Grid.Column="1"
                Grid.Row="0"
                CornerRadius="10,10,0,0"
                BorderBrush="#F1F2F7"
                BorderThickness="0 0 0 1"
                MouseDown="TopBar_MouseDown">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="BtnPrint"
                    Width="40" Height="35"
                    Content="🖶"
                    FontWeight="Bold"
                    Style="{DynamicResource ControlButtonTheme}"
                        Click="BtnPrint_Click"/>
                <Button x:Name="BtnClose"
                Width="40" Height="35"
                Content="X"
                Style="{DynamicResource ControlButtonTheme}"
                HorizontalAlignment="Right"
                Margin="0,0,10,0"
                Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
        <Border x:Name="GeneratedBorder"
                Background="White"
                Grid.Column="1"
                Grid.Row="1"
                CornerRadius="0,0,0,0"
                VerticalAlignment="Stretch"
                Visibility="Hidden"/>
        <Border x:Name="SearchBorder"
                Background="#007FFF"
                Grid.Column="1"
                Grid.Row="1"
                CornerRadius="0,0,0,0"
                VerticalAlignment="Stretch"/>


        <Border x:Name="SearchTextBoxBackground"
         Background="#F1F2F7"
         CornerRadius="10"
         Height="35"
         Width="300"
         HorizontalAlignment="Left"
         VerticalAlignment="Center"
         Margin="140,0"
         Grid.Row="1"/>
        <TextBlock x:Name="OrderNumText"
                Text="Order Number"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="27,0,0,0"
                FontSize="14"
                Foreground="White"
                FontWeight="Normal"
                FontFamily="Aptos"
                Grid.Row="1"/>
        <StackPanel x:Name="SearchPanel"
            Orientation="Horizontal"
            Margin="0,0,20,0"
            Height="35"
            Grid.Row="1"
            VerticalAlignment="Center"
                    HorizontalAlignment="Right">
            <Button x:Name="BtnGenCI"
                Content="Generate"
                HorizontalAlignment="Left"
                Style="{DynamicResource SearchButtonTheme}"
                Click="BtnGenCI_Click"/>
            <Button x:Name="BtnResetCI"
            Content="Reset"
            Margin="20,0,0,0"
            HorizontalAlignment="Left"
            Style="{DynamicResource SearchButtonTheme}"
            Click="BtnResetCI_Click"/>
        </StackPanel>
        <TextBox x:Name="TxtBxSearch"
         Background="Transparent"
          BorderThickness="0"
         HorizontalAlignment="Left"
          VerticalAlignment="Center"
         VerticalContentAlignment="Center"
         HorizontalContentAlignment="Left"
         Padding="7"
         Height="35"
         Width="300"
         Margin="140,0"
         FontFamily="Aptos"
         Grid.Row="1">
         </TextBox>
        
        
        
        
        <Border x:Name="CIBackground"
                Background="White"
                Grid.Column="1"
                Grid.Row="2"
                CornerRadius="0,0,10,10"
                VerticalAlignment="Stretch">

        </Border>

        <Grid x:Name="PrintBoundry"
              Width="800"
              Height="990"
              Grid.Row="2"
              Margin="0,-40,0,0"
              VerticalAlignment="Top">
            <Image x:Name="PUKLogo"
               Source="Images\Polythene_UK_Logo_2022_RGB_LR.png"
               Margin="20,0"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               Height="70"
                   Visibility="Hidden"/>
            <TextBlock Text="Commercial Invoice"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="20,80,0,0"
                FontSize="20"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>

        <TextBlock Text="Invoice Number:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,120,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
        <TextBlock x:Name="InvNumber"
                Text="VARInvNum"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,120,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

        <TextBlock Text="Date of Invoice:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,160,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
        <TextBlock x:Name="InvDate"
                Text="VARInvDate"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,160,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

        <TextBlock Text="Country of Origin:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,180,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>
            <TextBlock x:Name="OriginLOC"
                Text="VAROriginLOC"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,180,0,0"
                FontSize="12"
                Foreground="Black"
                FontWeight="Normal"
                FontFamily="Aptos"/>

            <Rectangle Fill="LightBlue"                 
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                       Margin="120,75,0,0"
                       Height="170"
                       Width="195"
                       RadiusX="10"
                       RadiusY="10"
                       Opacity="0.4"/>
            <Rectangle Fill="LightBlue"                 
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                       Margin="570,75,0,0"
                       Height="335"
                       Width="195"
                       RadiusX="10"
                       RadiusY="10"
                       Opacity="0.4"/>


            <TextBlock Text="Invoice From:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="20,85,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="InvFromText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="370,115,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"
                         Background="Transparent"/>

            <TextBlock Text="Invoice To:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="420,85,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="InvToText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="580,115,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"
                         Background="Transparent"/>

            <TextBlock Text="Deliver To:"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Margin="420,255,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <RichTextBox x:Name ="DelToText"
                         HorizontalAlignment="Left"
                         VerticalAlignment="Top"
                         Margin="580,285,0,0"
                         FontSize="12"
                         FontFamily="Aptos"
                         Width="200"
                         Height="120"
                         BorderThickness="0"
                         Padding="2,4,0,0"
                         Block.LineHeight="20"
                         Background="Transparent"/>

            <TextBlock Text="Order Number:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,255,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="OrderNumberTextBlock"
                Text="OrderNumberTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,255,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Customer PO:"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,275,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="CusPOTextBlock"
                Text="CusPOTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,275,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Terms: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,295,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="TermsTextBlock"
                Text="TermsTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,295,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="INCOTERMS: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,315,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="INCOTERMSTextBlock"
                Text="INCOTERMSTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,315,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>


            <DataGrid x:Name="DataGridCI"
                    Grid.Row="2"
                    Margin="10,420,35,20"
                    MinColumnWidth="40"
                      VerticalAlignment="Top"
                      Height="auto"
                      MaxHeight="240"
                      VerticalScrollBarVisibility="Disabled"
                    Style="{DynamicResource DataGridThemeCI}"
                    CellStyle="{DynamicResource DataGridCellStockThemeCI}"
                    ColumnHeaderStyle="{DynamicResource ColumnHeaderStockThemeCI}"
                      AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn IsReadOnly="False" Header="Code" Binding="{Binding Code}" ElementStyle="{DynamicResource WrapText}" Width="130"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Description" Binding="{Binding Description}" ElementStyle="{DynamicResource WrapText}" Width="200"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Qty" Binding="{Binding Qty}" ElementStyle="{DynamicResource WrapText}" Width="60"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Unit" Binding="{Binding Unit}" ElementStyle="{DynamicResource WrapText}" Width="45"/>
                    <DataGridTextColumn IsReadOnly="False" Header="HS Code" Binding="{Binding HSCode}" ElementStyle="{DynamicResource WrapText}" Width="75"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Net (kg)" Binding="{Binding Weight}" ElementStyle="{DynamicResource WrapText}" Width="60"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Gross (kg)" Binding="{Binding Grosskg}" ElementStyle="{DynamicResource WrapText}" Width="60"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Price" Binding="{Binding Price}" ElementStyle="{DynamicResource WrapText}" Width="60"/>
                    <DataGridTextColumn IsReadOnly="False" Header="Total" Binding="{Binding Total}" ElementStyle="{DynamicResource WrapText}" Width="63"/>
                </DataGrid.Columns>
            </DataGrid>

            <TextBlock Text="Mode of Shipment: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,675,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="ShipModeTextBlock"
                Text="Road"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,675,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Certification: "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,695,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="CertTextBlock"
                Text="CertTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="145,695,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <Rectangle Fill="LightBlue"                 
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                       Margin="565,663,0,0"
                       Height="100"
                       Width="200"
                       RadiusX="10"
                       RadiusY="10"
                       Opacity="0.4"/>

            <TextBlock Text="Sub Total: "
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                Margin="580,675,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="SubTotTextBlock"
                Text="SubTotTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="680,675,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>
            
            <TextBlock Text="VAT: "
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                Margin="580,695,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="VATTextBlock"
                Text="VATTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="680,695,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Total: "
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                Margin="580,715,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <TextBlock x:Name="TotTextBlock"
                Text="TotTextBlock"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="680,715,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock x:Name="CurrencyTextBlock"
                Text="CurrencyTextBlock"
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                Margin="580,740,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Polythene UK hereby certify that the information on this document is true and"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,735,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>
            <TextBlock Text="correct and that the contents of this shipment are as stated above. "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,750,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>
            <TextBlock Text="The exporter (EORI GB903824828000 / XI903824828000) of products covered"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,765,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>
            <TextBlock Text="by this document declares that, except where otherwise clearly indicated these"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,780,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>
            <TextBlock Text="products are of GB preferential origin. "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,795,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

            <TextBlock Text="Authorised Signature "
                HorizontalAlignment="left"
                VerticalAlignment="Top"
                Margin="25,845,0,0"
                FontSize="12"
                Foreground="#007FFF"
                FontWeight="Bold"
                FontFamily="Aptos"/>
            <Image x:Name="MDsig"
                   Source="Images\SigMD.png"
                   Width="120"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Left"
                   Margin="28,860,0,0"/>
            <TextBlock Text="James Wollard (Managing Director) "
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="25,915,0,0"
                FontSize="12"
                Foreground="Black"
                FontFamily="Aptos"/>

        </Grid>
        <Border x:Name="DragHandle"
            Background="#007FFF"                 
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                       Margin="0,0,0,0"
                       Height="100"
                       Width="20"
                       Grid.Row="2"
                CornerRadius="10,0,0,10"
                MouseDown="DragHandle_MouseDown">
            <TextBlock x:Name="ArrowMarker"
                       Text="↕"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       IsHitTestVisible="False"/>
        </Border>
    </Grid>
</Window>
