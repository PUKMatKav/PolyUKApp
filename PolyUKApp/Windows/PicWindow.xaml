<Window x:Class="PolyUKApp.Windows.PicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        Title="PicWindow" Height="900" Width="1600"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="Manual"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="20"/>
            <ColumnDefinition Width="auto" MinWidth="1000"/>
            <ColumnDefinition Width="*" MinWidth="20"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" MinHeight="20"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="auto" MinHeight="600"/>
            <RowDefinition Height="*" MinHeight="20"/>
        </Grid.RowDefinitions>

        <Border Background="Black"
            Opacity="0.5"
            CornerRadius="5,0,0,0"
            RenderOptions.EdgeMode="Aliased"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"/>
        <Border Background="Black"
            Opacity="0.5"
            CornerRadius="0,5,0,0"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="1"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="2"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Row="3"
                    CornerRadius="0,0,0,5"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="1"
                Grid.Row="3"/>
        <Border Background="Black"
            Opacity="0.5"
            RenderOptions.EdgeMode="Aliased"
                Grid.Column="2"
                Grid.Row="3"
                    CornerRadius="0,0,5,0"/>

        <Border x:Name="TopBorder"
                Background="{DynamicResource Accent}"
                BorderBrush="{DynamicResource AccentBorder}"
                Grid.Column="1"
                Grid.Row="1"
                CornerRadius="5,5,0,0">
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button x:Name="BtnClose"
                        Width="40" Height="35"
                        Content="X"
                        Style="{DynamicResource ControlButtonTheme}"
                        HorizontalAlignment="Right"
                        Margin="0,0,10,0"
                        Click="BtnClose_Click"/>
            </StackPanel>
        </Border>
        
        <Border x:Name="MainBorder"
                Grid.Column="1"
                Grid.Row="2"
                CornerRadius="0,0,5,5"
                Background="{DynamicResource BackgroundLight}"
                BorderBrush="{DynamicResource Border}"
                BorderThickness="1,0,1,1">
        </Border>
        <Border x:Name="ImageBorder"
                Grid.Column="1"
                Grid.Row="2"
                Background="Transparent"
                Margin="20,20,120,20"
                BorderBrush="{ DynamicResource BorderMid}"
                BorderThickness="1"
                CornerRadius="5">
            <Image x:Name="MainImage"
                     AllowDrop="True"
                   Drop="MainImage_Drop"/>
        </Border>
        
        

        <Button x:Name="NextButton"
                Content="Next Image"
                Style="{ DynamicResource SearchButtonTheme}"
                Height="35"
                Width="75"
                Margin="20"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"/>

        <TextBlock x:Name="JobTitleID"
                Text="Job ID:"
                Foreground="{DynamicResource Accent}"
                FontWeight="SemiBold"
                Margin="20,20,55,50"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"/>
        <TextBlock x:Name="JobTitleIDText"
                Text="888888"
                Foreground="{DynamicResource Text}"
                Margin="20,20,50,30"
                Grid.Column="1"
                Grid.Row="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"/>
    </Grid>
</Window>
