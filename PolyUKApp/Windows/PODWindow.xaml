<Window x:Class="PolyUKApp.Windows.PODWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PolyUKApp.Windows"
        mc:Ignorable="d"
        Title="PODWindow"
        Height="800" Width="1400" MinHeight="800" MinWidth="1200"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        Icon="Images/PUKIco.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Border x:Name="TopBar0"
        Background="{DynamicResource Accent}"
        CornerRadius="5,5,0,0"
        BorderBrush="{DynamicResource AccentBorder}"
        BorderThickness="1"
        MouseDown="TopBar0_MouseDown"/>

        <Border Background="{DynamicResource BackgroundBase}"
        Grid.Row="2"
        Opacity="1"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1,0"/>

        <Border x:Name="MainBorder"
            Background="{DynamicResource BackgroundLight}"
            Margin="25"
            Grid.Row="2"
            CornerRadius="5"
            BorderBrush="{DynamicResource BorderMid}"
            BorderThickness="1">
            <Grid>
                <TextBlock x:Name="TextBlockStock"
               Text="POD / CoC System"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"
               FontSize="18"
               Margin="20,20,0,0"
               Foreground="{DynamicResource Accent}"
               FontFamily="Aptos"
               FontWeight="Bold"/>
                <TextBlock x:Name="TxtSelectYr"
                    Text="Select Year"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="27,70,0,0"
            FontSize="12"
            Foreground="{DynamicResource Text}"
            FontWeight="Normal"
            FontFamily="Aptos"/>

                <ComboBox x:Name="ComboBoxYear"
                  Width="200"
                  Height="30"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="20,100,0,0"
                  Background="Transparent"
                  Style="{DynamicResource ComboBoxFlatStyle}"
                  Foreground="{DynamicResource Text}"
                  SelectionChanged="ComboBoxYear_SelectionChanged">
                </ComboBox>

                <Button x:Name="DataSearchBtn"
                  Width="160"
                  Height="30"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="20,100,0,0"
                        Style="{DynamicResource GeneralButtonTheme}"
                        Content="Check Active BRC Codes"
                        Visibility="Collapsed"
                        Click="DataSearchBtn_Click"/>

                <TextBlock Name="TextBlockMonth"
                    Text="Select Month"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="247,70,0,0"
            FontSize="12"
            Foreground="{DynamicResource Text}"
            FontWeight="Normal"
            FontFamily="Aptos"
            Visibility="Hidden"/>
                <ComboBox x:Name="ComboBoxMonth"
                  Width="200"
                  Height="30"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="240,100,0,0"
                  Background="Transparent"
                  Style="{DynamicResource ComboBoxFlatStyle}"
                  Foreground="{DynamicResource Text}"
                  SelectionChanged="ComboBoxMonth_SelectionChanged"
                  Visibility="Hidden">
                </ComboBox>

                <TextBlock Name="TextBlockSupplier"
                    Text="Select Supplier"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Margin="467,70,0,0"
            FontSize="12"
            Foreground="{DynamicResource Text}"
            FontWeight="Normal"
            FontFamily="Aptos"
            Visibility="Hidden"/>
                <ComboBox x:Name="ComboBoxSupplier"
                  Width="200"
                  Height="30"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Top"
                  Margin="460,100,0,0"
                  Background="Transparent"
                  Style="{DynamicResource ComboBoxFlatStyle}"
                  Foreground="{DynamicResource Text}"
                  SelectionChanged="ComboBoxSupplier_SelectionChanged"
                  Visibility="Hidden">
                </ComboBox>

                <Button x:Name="BtnExport"
                Content="Export"
                Margin="700,100,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnExport_Click"
                Width="80"
                Style="{DynamicResource GeneralButtonTheme}"
                Visibility="Hidden"/>

                <DataGrid x:Name="DataGrid1"
                Grid.Row="2"
                Margin="20,210,20,20"
                MinColumnWidth="100"
                Style="{DynamicResource DataGridTheme}"
                CellStyle="{DynamicResource DataGridCellStockTheme}"
                ColumnHeaderStyle="{DynamicResource ColumnHeaderStockTheme}">
                </DataGrid>


            </Grid>
        </Border>

        <Border x:Name="BotBar0"
        Background="{DynamicResource BackgroundMid}"
        Grid.Row="3"
        BorderBrush="{DynamicResource Border}"
            BorderThickness="1"
            CornerRadius="0,0,5,5">
        </Border>

        <Border x:Name="LogoBar0"
            Background="{DynamicResource BackgroundMid}"
            Grid.Row="1"
            BorderBrush="{DynamicResource Border}"
            BorderThickness="1,0,1,1">
        </Border>

        <StackPanel Orientation="Horizontal"
 HorizontalAlignment="Right"
         Margin="0,0,10,0">
            <Button x:Name="BtnMinimise"
             Width="40" Height="35"
             Content="_"
             Style="{DynamicResource ControlButtonTheme}"
             Click="BtnMinimise_Click"/>
            <Button x:Name="BtnMaximise"
             Width="40" Height="35"
             Content="🗖"
             Style="{DynamicResource ControlButtonTheme}"
             Click="BtnMaximise_Click"/>
            <Button x:Name="BtnClose"
             Width="40" Height="35"
             Content="X"
             Style="{DynamicResource ControlButtonTheme}"
             Click="BtnClose_Click"/>
        </StackPanel>

        <Image x:Name="PUKLogo"
    Source="Images\PUK_Blue_Logo_512.png"
    Grid.Row="1"
    Margin="20,8,15,8"
    HorizontalAlignment="Left"/>

        <TextBlock x:Name="versionbox"
        Text="v0.1"
        Grid.Row="3"
        FontFamily="Aptos"
        Foreground="Gray"
        VerticalAlignment="Center"
        Margin="10 0 0 0"/>
        <StackPanel x:Name="ReturnTabPanel"
                Grid.Row="1"
                    Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="375,0,25,0">
            <Button x:Name="PODBtn"
        Style="{DynamicResource GeneralButtonTheme}"
        Width="120"
        Margin="20,0"
        Content="Check PODs / CoCs"
                    Click="PODBtn_Click"/>
            <Button x:Name="DataBtn"
        Style="{DynamicResource GeneralButtonTheme}"
        Width="120"
        Margin="0,0,20,0"
        Content="Check Data Sheets"
                    Click="DataBtn_Click"/>
            <Button x:Name="BtnMainMenu"
                Content="Main Menu"
                Click="BtnMainMenu_Click"
                Width="80"
                Style="{DynamicResource GeneralButtonTheme}"/>

        </StackPanel>


    </Grid>
</Window>
